<h1>Books</h1>
<table>
  <thead>
    <tr>
      <td colspan="1"></td>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td>Profile-Image</td>
      <td><%= book.title %></td>
      <td><%= book.body%></td>
    </tr>
    <% end %>
  </tbody>
</table>

<h2>New book</h2>
<%= form_with model: @book, local: true do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>
  <P>Opinion</P>
  <%= f.text_area :body %>
  <%= f.submit "Create book" %>
<% end %>

